<!DOCTYPE html>
<html lang="<%-lang.this_lang_short%>">
    <head>

        <!--META TAGS--> 
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

        <!--TITLE--> 
        <% if(headTitle) {%>
        <title><%-headTitle%> | Melexsoft</title>
        <%} else {%>
        <title>Melexsoft</title>
        <%}%>

        <!--DESCRIPTION--> 
        <meta name="description" content="<%-headDesc%>" />

        <!--KEYWORDS--> 
        <meta name="keywords" content="<%-headKeywords%>" />

        <!--AUTHOR--> 
        <meta content="sacredthemes" name="author" />

        <!--FAVICON-->
        <link rel="shortcut icon" href="/assets/images/logo/favicon.svg">

        <!--ANIMATE-->
        <link href="/assets/css/animate.css" rel="stylesheet" type="text/css"  />

        <!--BOOTSTRAP-->
        <link href="/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

        <!--SLICK-->
        <link href="/assets/css/slick.css" rel="stylesheet" type="text/css"  />

        <!--LIGHTGALLERY-->
        <link type="text/css" rel="stylesheet" href="/assets/lightgallery/css/lightgallery.css" />
        <link type="text/css" rel="stylesheet" href="/assets/lightgallery/css/lg-zoom.css" />

        <!--ICONS-->
        <link href="/assets/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
        <link href="/assets/css/line-awesome.min.css" rel="stylesheet" type="text/css" />
        <link href="/assets/css/fontawesome.min.css" rel="stylesheet" type="text/css" />

        <!--CSS-->
        <link href="/assets/css/style.css" rel="stylesheet" type="text/css" id="theme-default" />
        <link href="/assets/css/rtl-style.css" rel="stylesheet" type="text/css" id="rtl-theme-default" disabled="disabled" />
        <link href="/assets/css/colors/default-color.css" rel="stylesheet" type="text/css" id="theme-color" />
        <link href="/assets/css/new-syle.css" rel="stylesheet" type="text/css"/>

    </head>
    <body>
        <!-- box-wrapper -->
        <div class="box-wrapper">
            <!-- Loader -->
            <div id="preloader">
                <div id="status">
                    <div class="d-loader">
                        <img src="/assets/images/logo/logo.svg" alt="DCode">
                    </div>
                </div>
            </div>
            <!-- Loader -->
            <!-- Nav Bar -->
            <header id="master-head" class="<%-navbarClass%>">
                <div class="container">
                    <div id="main-logo" class="logo-container">
                        <a class="logo" href="/">
                            <img src="/assets/images/logo/logo.svg" style="height: 50px;" class="logo-dark" alt="DCode">
                            <img src="/assets/images/logo/logo-white.svg" style="height: 50px;" class="logo-light" alt="DCode">
                        </a>
                    </div>
                    <div class="menu-toggle-btn">
                        <a class="navbar-toggle">
                            <i class="fas fa-bars"></i>
                        </a>
                    </div>
                    <div id="navigation" class="nav navbar-nav navbar-main">
                        <ul id="main-menu" class="menu-primary">
                            <li class="menu-item <%if(activePage == lang.navbar_home){%>active<%}%>">
                                <a href="/"><%-lang.navbar_home%></a>
                            </li>
                            <li class="menu-item <%if(activePage == lang.navbar_services){%>active<%}%>">
                                <a href="/services"><%-lang.navbar_services%></a>
                            </li>
                            <li class="menu-item <%if(activePage == lang.navbar_process){%>active<%}%>">
                                <a href="/process"><%-lang.navbar_process%></a>
                            </li>
                            <li class="menu-item <%if(activePage == lang.navbar_case_studies){%>active<%}%>">
                                <a href="/case-studies"><%-lang.navbar_case_studies%></a>
                            </li>
                            <li class="menu-item <%if(activePage == lang.navbar_career){%>active<%}%>">
                                <a href="/career"><%-lang.navbar_career%></a>
                            </li>
                            <li class="menu-item <%if(activePage == lang.navbar_contact){%>active<%}%>">
                                <a href="/contact"><%-lang.navbar_contact%></a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-right">
                        <div class="select-language">
                            <div class="current-language">
                                <p><%-lang.this_lang_long%></p>
                            </div>
                            <ul class="other-languages">
                                <% for(let i = 0; i < lang.allLangs.length; i++) {%>
                                    <li lang="<%-lang.allLangs[i][0] %>" class="language <% if(lang.this_lang_short == lang.allLangs[i][0]){%>active<%}%>" onclick="activateLanguage(this)"><%-lang.allLangs[i][1] %></li>
                                <%}%>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Nav Bar -->
            <!-- Main Wrapper -->
            <%-body%>
            <!-- Main Wrapper -->
            <footer class="site-footer footer-theme-two">
                <div class="container">
                    <div class="main-footer style-dark">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="widget">
                                    <div class="text-widget">
                                        <div class="about-info">
                                            <div class="image-wrapper wow fadeInUp" data-wow-delay="0.3s">
                                                <img src="/assets/images/logo/logo-white.svg" style="height: 50px;" alt="" />
                                            </div>
                                            <p class="wow fadeInUp" data-wow-delay="0.4s"><%-lang.footer_desc%></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-sm-6" style="margin-left: auto;">
                                <div class="widget">
                                    <div class="widget-title">
                                        <h3 class="title wow fadeInUp" data-wow-delay="0.3s"><%-lang.footer_menu%></h3>
                                    </div>
                                    <div class="text-widget">
                                        <div class="footer-nav wow fadeInUp" data-wow-delay="0.4s">
                                            <ul>
                                                <li><a href="/"><%-lang.navbar_home%></a></li>
                                                <li><a href="/services"><%-lang.navbar_service%></a></li>
                                                <li><a href="/process"><%-lang.navbar_process%></a></li>
                                                <li><a href="/case-studies"><%-lang.navbar_case_studies%></a></li>
                                                <li><a href="/contact"><%-lang.navbar_contact%></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6">
                                <div class="widget">
                                    <div class="widget-title">
                                        <h3 class="title wow fadeInUp" data-wow-delay="0.3s"><%-lang.footer_contact%></h3>
                                    </div>
                                    <div class="text-widget">
                                        <div class="contact-info wow fadeInUp" data-wow-delay="0.4s">
                                            <ul>
                                                <li class="">
                                                    <a href="mailto:support@melexsoft.com">
                                                        <i class="fas fa-envelope"></i>
                                                        support@melexsoft.com
                                                    </a>
                                                </li>
                                                <li class="">
                                                    <a href="tel:+90 (212) 809 7674">
                                                        <i class="fas fa-phone"></i>
                                                        +90 (212) 809 7674
                                                    </a>
                                                </li>
                                                <li class="">
                                                    <a href="https://goo.gl/maps/99s9sopFfFD7jJhn8" target="_blank">
                                                        <i class="fas fa-map-marker-alt"></i>
                                                        Çukur Mah. Tarlabaşı Bulvarı, No: 150-170 Kat:5/43, Taksim 360 - Beyoğlu, Istanbul, Turkey
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="social-media-links wow fadeInUp" data-wow-delay="0.4s">
                                            <ul>
                                                <li><a target="_blank" href="https://www.facebook.com/melexsoft/"><i class="fab fa-facebook-f"></i></a></li>
                                                <li><a target="_blank" href="https://www.instagram.com/melexsoft/"><i class="fab fa-instagram"></i></a></li>
                                                <li><a target="_blank" href="https://twitter.com/melexsoft"><i class="fab fa-twitter"></i></a></li>
                                                <li><a target="_blank" href="https://www.linkedin.com/company/melexsoft/"><i class="fab fa-linkedin-in"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div><!-- End Widget -->
                            </div><!-- End Col -->
                        </div><!-- End Row -->
                    </div>
                    <div class="copyright-bar style-dark">
                        <div class="copyright-text text-center wow fadeInUp" data-wow-delay="0.5s">
                            MelexSoft © 2021
                        </div>
                    </div>
                </div>
            </footer>

        <!-- javascript -->
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/js/jquery-migrate.min.js"></script>
        <script src="/assets/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/jquery.easing.min.js"></script>
        <script src="/assets/js/scrollspy.min.js"></script>
        <script src="/assets/js/appear.js"></script>

        <!-- Typed.js -->
        <script src="/assets/typed.js/lib/typed.min.js"></script>

        <!-- PHOTOSWIPE -->
        <script src="/assets/lightgallery/lightgallery.min.js"></script>
        <script src="/assets/lightgallery/plugins/zoom/lg-zoom.min.js"></script>

        <!-- WOW Animation -->
        <script src="/assets/js/wow.min.js"></script>

        <!-- Slick Slider -->
        <script src="/assets/js/slick.min.js"></script>

        <!-- Main Js -->
        <script src="/assets/js/dcode.js"></script>
        <script src="/assets/js/new-script.js"></script>
        <script src="/assets/js/ajax-scripts.js"></script>

    </body>
</html>